    <div class="minibar">
      <ul class="list">
        <li><button type="button"  ><a class="home" href="/connector/sign-out">HOME <i class='fas fa-angle-right'></i></a></button></li>
        <li><button ><a class="home">USER PROFILE </a></button></li>
      </ul>
      <button type="button" class="btn btn-danger" id='minibar-btn'>
          <a href="/connector/file-insurance">File Insurance</a>
      </button>
    </div>
    <center><div class="image">
      <img src="/images/car.jpeg">
      <h1 class="name"><%= locals.user.first_name[0].toUpperCase()  %><%= locals.user.first_name.slice(1,)  %> <%= locals.user.last_name[0].toUpperCase() %><%= locals.user.last_name.slice(1,) %></h1>
      <hr class="ala">
      <p class="paragraph">Complete your profile for the best results and ease up your application process</p>
    </div></center>
    
    <div class="details">

        <div class="dropdown2">Contact Information<button><i class='fas fa-angle-down'></i></button>
              <a class="first-anchor">Phone: <%= locals.user.phone %></a>
              <a>Email: <%= locals.user.email %></a>
        </div>
        
        <div class="dropdown3">Work Information<button><i class='fas fa-angle-down'></i></button>
              <a class="first-anchor">Number of insured: <%= locals.user.insurers.length %></a>
              <a>Name of Insured:-</a>
              <% for(let i=0; i<insurers.length; i++){ %>
                <% for(let j=0; j<insurers[i].insurers.length; j++){%>
                  <% console.log(JSON.stringify(locals.user._id)) %>
                  <% console.log(JSON.stringify(insurers[i].insurers[j].connector)) %>
                  <a>
                      <% if(JSON.stringify(locals.user._id) == JSON.stringify(insurers[i].insurers[j].connector)){ %>
                        <%= insurers[i].insurers[j].nameOfInsured %>
                      <% } %>
                      </a>
                <% } %>
            <% } %>
        </div>
        
        <div class="dropdown4">Documents<button><i class='fas fa-angle-down'></i></button>
          <a href="#" class="first-anchor">Link 1</a>
          <a href="#">Link 2</a>
