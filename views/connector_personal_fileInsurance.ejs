<form class="form" action="/connector/file-insurance/create" method="POST">
  
    <div class="plot">
      <h1 class="t-head" >File Insurance</h1>
        <label for="NameOfInsured">Name of Insured</label>
        <input class="first-inp" id="first" type="text" name="name" placeholder="Name">
      
      <br>
      
        <label for="NameOfInsured">Phone No. of Insured</label>
        <input class="first-inp" type="text" name="phone" placeholder="98765....">
      
      <input type="hidden" name="connector" value="<%= user._id %>">
    </div>
    <center><h3 style="margin-top: 3rem; margin-bottom: 5rem;">What Insurance would you like to file</h3></center>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/images/paisabazaar_term.jpeg" class="d-block w-100" alt="..." id="term-plan-img">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Term Insurance</h5>
                </div>
              </div>
              <div class="carousel-item">

                <img src="/images/car.jpeg" class="d-block w-100" alt="..." id="vehicle-plan-img">

                <div class="carousel-caption d-none d-md-block">
                  <h5>Car Insurance</h5>
                </div>
              </div>
              <div class="carousel-item">

                <img src="/images/health.jpeg" class="d-block w-100" alt="..." id="health-plan-img">

                <div class="carousel-caption d-none d-md-block">
                  <h5>Health Insurance</h5>
                </div>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          <div>
              <div id="Term-Plan">
                  <h3>Term Plan</h3>
                  <label for="age">Enter Age</label>
                  <input type="number" name="age">

                  <br>

                  <label for="sourceOfincome">Source of income</label>
                  <input type="text" name="source">

                  <br>

                  <!-- <label for="CopyofITR">Upload a copy of ITR</label>
                  <input type="file" name="ITRcopy"> -->

                  <br>

                  <label for="Illness">Any illness</label>
                  <input type="text" name="illness">

              </div>

              <div id="Health-Plan">
                <h3>Health Plan</h3>
                <label for="familyDetails">Enter Spouse Name</label>
                <input type="text" name="spouseName">

                <br>

                <label for="marriageAnniversary">Enter date of marriage anniversary</label>
                <input type="date" name="marriageAnniversary">

                <br>

                <label for="children">Name of 1st child</label>
                <input type="text" name="FChildName">

                <br>

                <label for="children">Name of 2nd child</label>
                <input type="text" name="SChildName">

                <br>

                <!-- <label for="previousPolicy">Upload if any previous policy copy</label>
                <input type="file" name="previousPolicyHealth"> -->

            </div>

            <div id="Vehicle-Plan">
                <h3>Vehicle Plan</h3>

                <label for="vehicle-number">Enter Vehicle Number</label>
                <input type="text" name="vehicleName">

                <br>

                <label for="vehicle-make">Enter make of Vehicle</label>
                <input type="text" name="vehicleMake">

                <br>

                <!-- <label for="previousPolicy">Upload if any previous policy copy</label>
                <input type="file" name="previousPolicyVehicle"> -->

            </div>
          </div>

          <input type="submit" value="Submit" id="submit-btn">
    </form>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
